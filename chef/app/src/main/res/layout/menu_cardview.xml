<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_menu_item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/beef_noodles"/>

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Dish Name"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/img_menu_item"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_price"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Menu price"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/img_menu_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_name" />

        <TextView
            android:id="@+id/tv_menu_describe"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="The item describe: ......"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_menu_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_price" />




        <Button
            android:id="@+id/btn_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Edit this item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_menu_item" />



        <Button
            android:id="@+id/btn_menu_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Delete this Item"
            app:layout_constraintStart_toEndOf="@+id/btn_menu_edit"
            app:layout_constraintTop_toBottomOf="@+id/img_menu_item" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="- - - - - - - - - - - - - - - - - - -"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_menu_delete" />

        <TextView
            android:id="@+id/tv_menu_raiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_menu_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_describe" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>