<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/view_order_list_order"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="106dp"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="3dp">

   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="4"
       android:orientation="vertical">
       <TextView
           android:id="@+id/tv_order_list_order_title"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center_vertical"
           android:text="CheeseBurger, Frids"
           android:ellipsize="end"
           android:maxLines="1"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_order_list_dish_quantity"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:text="1 dish"
               android:gravity="center_vertical"
               />
           <TextView
               android:id="@+id/tv_order_list_total_charged"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="3"
               android:text="$9.99"
               android:textStyle="bold"
               android:textColor="@color/primaryRed"
               android:gravity="center"
               />
       </LinearLayout>

       <TextView
           android:id="@+id/tv_order_list_order_date"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:text="2020-12-6"
           android:gravity="center_vertical"
           />
   </LinearLayout>

    <TextView
        android:id="@+id/tv_order_list_order_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="waiting"
        android:gravity="center"
        />
</LinearLayout>