<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="3dp">

    <TextView
        android:id="@+id/tv_cc_general_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="very bad"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_cc_general_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="This is a long sentence here"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created On: "/>
        <TextView
            android:id="@+id/tv_cc_general_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/12/07"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cc_general_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pending"/>

    <LinearLayout
        android:id="@+id/view_cc_general_dispute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/grey"/>
        <TextView
            android:id="@+id/tv_cc_general_dispute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dispute"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>